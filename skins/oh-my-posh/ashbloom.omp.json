{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "Ashbloom :: {{ .Folder }}",
  "shell_integration": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground": "p:ash_rose",
    "template": "\n ï‘„ "
  },
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "p:ash_rose",
    "template": " \u276f "
  },
  "palette": {
    "ash_slate": "#202124",
    "ash_cream": "#e8e2d0",
    "ash_rose": "#F04770",
    "ash_mint": "#6DEcb9",
    "ash_gold": "#F2CD60",
    "ash_cyan": "#3DD6F5",
    "ash_blue": "#9E86FF",
    "ash_orange": "#FF9E64"
  },
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:ash_gold",
          "options": {
            "time_format": "Mon 02 Jan 15:04"
          },
          "style": "plain",
          "template": "[{{ .CurrentDate | date .Format }}]",
          "type": "time"
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "p:ash_cyan",
          "options": {
            "mapped_shell_names": {
              "pwsh": "Shell",
              "powershell": "Shell",
              "cmd": "Cmd",
              "bash": "Bash"
            }
          },
          "template": " \ue795 {{ .Name }}"
        },
        {
          "foreground": "p:ash_orange",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:ash_rose{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:ash_blue{{ end }}",
            "{{ if gt .Ahead 0 }}p:ash_blue{{ end }}",
            "{{ if gt .Behind 0 }}p:ash_blue{{ end }}"
          ],
          "options": {
            "branch_template": "{{ trunc 25 .Branch }}",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "p:ash_mint",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:ash_rose{{ end }}"
          ],
          "template": " x{{ reason .Code }}"
        },
        {
          "foreground": "p:ash_mint",
          "foreground_templates": [
            "{{ if gt .Code 0 }}p:ash_rose{{ end }}"
          ],
          "options": {
            "style": "roundrock",
            "always_enabled": true
          },
          "style": "diamond",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:ash_blue",
          "options": {
            "style": "full"
          },
          "style": "plain",
          "template": "\ue5ff {{ .Path }}",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:ash_rose",
          "style": "plain",
          "template": "\u0021",
          "type": "root"
        },
        {
          "foreground": "p:ash_mint",
          "style": "plain",
          "template": "\u276f",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ]
}